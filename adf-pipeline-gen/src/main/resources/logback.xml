<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5level] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="report" level="INFO" additivity="false" >
        <appender-ref ref="REPORT" />
    </logger>
</configuration>