<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date [%-5level] %logger{1} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="root" level="info"  >
        <appender-ref ref="STDOUT" />
    </logger>

</configuration>
